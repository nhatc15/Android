<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="305dp"
    android:background="@drawable/white_item_article_background"
    android:layout_marginHorizontal="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivHot"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/news"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHotAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:text="@string/author"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/ivHot"
        app:layout_constraintTop_toBottomOf="@+id/ivHot" />

    <TextView
        android:id="@+id/tvHotTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ivHot"
        app:layout_constraintStart_toStartOf="@+id/ivHot"
        app:layout_constraintTop_toBottomOf="@+id/tvHotAuthor" />

</androidx.constraintlayout.widget.ConstraintLayout>